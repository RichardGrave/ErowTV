<?xml version="1.0" encoding="UTF-8"?>
<project name="module_erowtv" default="compile.module.erowtv">
  <dirname property="module.erowtv.basedir" file="${ant.file.module_erowtv}"/>
  
  <property name="module.jdk.home.erowtv" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.erowtv" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.erowtv" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.erowtv" value="-encoding UTF-8 -source 12 -target 12 ${compiler.args}"/>
  
  <property name="erowtv.output.dir" value="${module.erowtv.basedir}/out/production/ErowTV"/>
  <property name="erowtv.testoutput.dir" value="${module.erowtv.basedir}/out/test/ErowTV"/>
  
  <path id="erowtv.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="erowtv.module.production.classpath">
    <path refid="${module.jdk.classpath.erowtv}"/>
    <path refid="library.spigot-api-1.14.2-r0.1-snapshot.classpath"/>
  </path>
  
  <path id="erowtv.runtime.production.module.classpath">
    <pathelement location="${erowtv.output.dir}"/>
    <path refid="library.spigot-api-1.14.2-r0.1-snapshot.classpath"/>
  </path>
  
  <path id="erowtv.module.classpath">
    <path refid="${module.jdk.classpath.erowtv}"/>
    <pathelement location="${erowtv.output.dir}"/>
    <path refid="library.spigot-api-1.14.2-r0.1-snapshot.classpath"/>
  </path>
  
  <path id="erowtv.runtime.module.classpath">
    <pathelement location="${erowtv.testoutput.dir}"/>
    <pathelement location="${erowtv.output.dir}"/>
    <path refid="library.spigot-api-1.14.2-r0.1-snapshot.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.erowtv">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.erowtv">
    <patternset refid="excluded.from.module.erowtv"/>
  </patternset>
  
  <path id="erowtv.module.sourcepath">
    <dirset dir="${module.erowtv.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.erowtv" depends="compile.module.erowtv.production,compile.module.erowtv.tests" description="Compile module ErowTV"/>
  
  <target name="compile.module.erowtv.production" depends="register.custom.compilers" description="Compile module ErowTV; production classes">
    <mkdir dir="${erowtv.output.dir}"/>
    <javac2 destdir="${erowtv.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.erowtv}/javac">
      <compilerarg line="${compiler.args.erowtv}"/>
      <bootclasspath refid="erowtv.module.bootclasspath"/>
      <classpath refid="erowtv.module.production.classpath"/>
      <src refid="erowtv.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.erowtv"/>
    </javac2>
    
    <copy todir="${erowtv.output.dir}">
      <fileset dir="${module.erowtv.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.erowtv.tests" depends="register.custom.compilers,compile.module.erowtv.production" description="compile module ErowTV; test classes" unless="skip.tests"/>
  
  <target name="clean.module.erowtv" description="cleanup module">
    <delete dir="${erowtv.output.dir}"/>
    <delete dir="${erowtv.testoutput.dir}"/>
  </target>
</project>